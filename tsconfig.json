{
  "compilerOptions": {
    "outDir": "build/",
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": false,
    "allowJs": false,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist/**/*",
    "test/**/*",
    "node_modules",
    "build",
    "jest"
  ],
  "types": [
    "typePatches"
  ]
}
